<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdcdada"
    tools:context="br.com.weslleyqi0.jwtools.activitys.CadastroPessoasActivity">

    <EditText
        android:id="@id/primeiro_nome"
        style="@style/com_PrimeiroNome"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:paddingLeft="16.0dip"
        android:background="@drawable/com_edittextbox"
        app:layout_constraintRight_toLeftOf="@+id/imgFoto"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <EditText
        android:id="@id/segundo_nome"
        style="@style/com_SegundoNome"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_below="@id/primeiro_nome"
        android:background="@drawable/com_edittextbox"
        app:layout_constraintTop_toBottomOf="@+id/primeiro_nome"
        app:layout_constraintRight_toLeftOf="@+id/imgFoto"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <EditText
        android:id="@id/ultimo_nome"
        style="@style/com_UltimoNome"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_below="@id/segundo_nome"
        android:layout_centerHorizontal="true"
        android:background="@drawable/com_edittextbox"
        app:layout_constraintTop_toBottomOf="@+id/segundo_nome"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toLeftOf="@+id/imgFoto"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />


    <ImageView
        android:id="@id/imgFoto"
        android:layout_width="132dp"
        android:layout_height="131dp"
        android:layout_alignTop="@+id/primeiro_nome"
        android:background="#ffbebcbc"
        app:srcCompat="@drawable/ic_pessoa"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_editor_absoluteX="244dp" />


</android.support.constraint.ConstraintLayout>
